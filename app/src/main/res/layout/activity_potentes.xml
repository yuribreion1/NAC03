<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Primeiro carro -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carro_potente_marca1"
        android:textColor="#FFF"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textStyle="bold"/>

    <TextView style="@style/DadosCarro"
        android:text="@string/carro_potente_nome1"
        />

    <Button
        android:layout_width="200sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:onClick="FragmentCarro1"
        android:text="@string/mais_detalhes" />

    <!-- Segundo carro -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carro_potente_marca2"
        android:textColor="#FFF"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textStyle="bold"/>

    <TextView style="@style/DadosCarro"
        android:text="@string/carro_potente_nome2"
        />

    <Button
        android:layout_width="200sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/mais_detalhes" />

    <!-- Terceito carro -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carro_potente_marca3"
        android:textColor="#FFF"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textStyle="bold"/>

    <TextView style="@style/DadosCarro"
        android:text="@string/carro_potente_nome3"
        />

    <Button
        android:layout_width="200sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/mais_detalhes" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentContainer"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>